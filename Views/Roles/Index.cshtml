@model System.Data.DataTable
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-striped">
    <tr>

        <th>Role name</th>
       
        <th>Role password</th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
<tr>
    <td>@Model.Rows[i][1]</td>
    <td>@Model.Rows[i][2]</td>
   
    <td>
        <a href="@Url.Action("Edit","Roles", new {@id=Model.Rows[i][0]})">Edit </a>
        <a href="@Url.Action("Delete","Roles", new {@id=Model.Rows[i][0]})">| Delete</a>
    </td>

</tr>
    }

</table>

<a href="@Url.Action("Create","Roles")">Add a Role</a>

